# Database Configuration (Railway will auto-generate this)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Session Configuration (Generate a secure random string)
SESSION_SECRET=your_secure_session_secret_here_replace_with_random_string

# Production Environment Variables
NODE_ENV=production
PORT=${{PORT}}

# PostgreSQL Connection (Railway auto-generates these)
PGHOST=${{Postgres.PGHOST}}
PGPORT=${{Postgres.PGPORT}}
PGUSER=${{Postgres.PGUSER}}
PGPASSWORD=${{Postgres.PGPASSWORD}}
PGDATABASE=${{Postgres.PGDATABASE}}

# Optional: For Replit OAuth (if using Replit Auth)
# REPL_ID=your_repl_id
# ISSUER_URL=https://replit.com/oidc
# REPLIT_DOMAINS=your-domain.railway.app